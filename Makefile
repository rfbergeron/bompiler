# Makefile, Author: Robert Bergeron

WARN = -Wall -Wextra -Werror -Wpedantic -Wshadow
# full gcc exec command
C = gcc -g -O0 -std=gnu11
CWARN = ${C} ${WARN} -fdiagnostics-color=never
CYY = ${C} -Wno-sign-compare
CDEP = gcc -std=gnu11 -MM ${WARN}
CDBG = ${C} -pg -fsanitize=address
MKFILE = Makefile
DEPFILE = ${MKFILE}.dep
GMAKE = ${MAKE} --no-print-directory
# name of the compiled executable
EXECNAME = bompiler
# .c source files
SRC = string_set.c lyutils.c astree.c auxlib.c symtable.c main.c
# .h header files
HDR = string_set.h lyutils.h astree.h auxlib.h symtable.h
# files generated by flex and bison
GENSRC = yyparse.c yylex.c
GENHDR = yyparse.h
# klib header files
LIBHDR = klib/khash.h klib/kvec.h
# .o object files
OBJ = ${SRC:.c=.o} ${GENSRC:.c=.o}
# .gch some garbage generated by gcc
GCH = ${HDR:=.gch} ${GENHDR:=.gch}
# files generated by GNU Indent
FMT = ${SRC:=~} ${HDR:=~} parser.y~
# convenient groups
ALLSRC = ${SRC} ${GENSRC}
ALLHDR = ${HDR} ${GENHDR} ${LIBHDR}

all : ${DEPFILE} ${EXECNAME}

${EXECNAME} : ${OBJ}
	${C} -o bompiler ${OBJ}

debug : ${OBJ}
	${CDBG} -o bompiler ${OBJ}

yylex.o : yylex.c
	${CYY} -c $< ${ALLHDR}

yyparse.o : yyparse.c yyparse.h
	${CYY} -c $< ${ALLHDR}

%.o : %.c ${ALLHDR}
	${C} -c $< ${ALLHDR}

yylex.c : scanner.l
	flex --outfile=yylex.c scanner.l

yyparse.h yyparse.c : parser.y
	bison -Wall -v --defines=yyparse.h --output=yyparse.c parser.y

${LIBHDR} : klib

clean:
	rm -f ${OBJ} ${GENSRC} ${GENHDR} ${DEPFILE} ${GCH}

spotless: clean
	rm -f ${EXECNAME} ${FMT} *.output *.out

cleantest:
	rm -f *.str *.tok *.ast *.sym *.oil

ci: 
	git add ${HDR} ${SRC} ${MKFILE} README.md DESIGN.md \
	.gitignore parser.y scanner.l

dep: ${ALLSRC} ${ALLHDR}
	${CDEP} ${ALLSRC} >> ${DEPFILE}

indent:
	indent -l80 -nfca -hnl -ncdb -bad -bap -nbc -bbo -nbfda -npsl -br -brs \
	-brf -ce -cdw -lps -saf -sai -saw -pcs -cs -bs -nut -ts4 -i4 -pi4 -ci4 \
	-cli4 -ppi4 -cbi0 -bli0 ${SRC} ${HDR} parser.y

format:
	clang-format --style=file -i ${SRC} ${HDR} parser.y

klib:
	if [ -e klib ]; then
		git pull -C klib
	else
		git clone https://github.com/attractivechaos/klib.git

${DEPFILE} :
	@ touch ${DEPFILE}
	${GMAKE} dep
