# Makefile, Author: Robert Bergeron

WARN = -Wall -Wextra -Werror -Wpedantic -Wshadow
# full gcc exec command
C = gcc -ggdb -pg -O0 -ansi
CWARN = ${C} ${WARN} -fdiagnostics-color=never
CYY = ${C} -Wno-sign-compare
CDEP = gcc -ansi -MM ${WARN}
MKFILE = Makefile
DEPFILE = ${MKFILE}.dep
GMAKE = ${MAKE} --no-print-directory
# name of the compiled executable
EXECNAME = bompiler
# .c source files
SRC = debug.c attributes.c strset.c lyutils.c astree.c symval.c typecheck.c asmgen.c main.c
# .h header files
HDR = debug.h attributes.h strset.h lyutils.h astree.h symval.h typecheck.h asmgen.h simplestack.h
# files generated by flex and bison
GENSRC = yyparse.c yylex.c
GENHDR = yyparse.h
# library files
LIBSRC = badmap.c badllist.c badalist.c murmur3.c
LIBHDR = badmap.h badllist.h badalist.h murmur3.h badlib.h
# .o object files
OBJ = ${ALLSRC:.c=.o}
# .gch header gens
GCH = ${ALLHDR:=.gch}
# files generated by GNU Indent
FMT = ${SRC:=~} ${HDR:=~} parser.y~
# convenient groups
ALLSRC = ${SRC} ${GENSRC} ${LIBSRC}
ALLHDR = ${HDR} ${GENHDR} ${LIBHDR}
# set VPATH for libraries
VPATH = badlib:badlib/murmur3

all : ${DEPFILE} ${EXECNAME}

${EXECNAME} : ${OBJ}
	${C} -o $@ $^

yylex.o : yylex.c
	${CYY} -c $^

yyparse.o : yyparse.c yyparse.h
	${CYY} -c $^

%.o : %.c ${ALLHDR}
	${C} -c $^

yylex.c : scanner.l
	flex --outfile=yylex.c scanner.l

yyparse.h yyparse.c : parser.y
	bison -Wall -v --defines=yyparse.h --output=yyparse.c parser.y

clean:
	rm -f ${OBJ} ${GENSRC} ${GENHDR} ${DEPFILE} ${GCH}

spotless: clean
	rm -f ${EXECNAME} ${FMT} *.output *.out

cleantest:
	rm -f *.str *.tok *.ast *.sym *.oil

ci: 
	git add ${HDR} ${SRC} ${MKFILE} README.md DESIGN.md TODO.md DESIGN2.md \
	IDEAS.md .gitignore parser.y scanner.l

dep: ${ALLSRC}
	${CDEP} $^ >> ${DEPFILE}

indent:
	indent -l80 -nfca -hnl -ncdb -bad -bap -nbc -bbo -nbfda -npsl -br -brs \
	-brf -ce -cdw -lps -saf -sai -saw -pcs -cs -bs -nut -ts4 -i4 -pi4 -ci4 \
	-cli4 -ppi4 -cbi0 -bli0 ${SRC} ${HDR} parser.y

format:
	clang-format --style=Google -i ${SRC} ${HDR} parser.y

${DEPFILE} :
	@ touch ${DEPFILE}
	${GMAKE} dep
